{
  "name": "squid-launcher-temp",
  "version": "1.0.0",
  "main": "electron/main.js",
  "repository": "github:ayatom1/SQUID-LAUNCHER",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "dist": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npx electron-builder",
    "start": "next start",
    "lint": "eslint"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "electron-is-dev": "^3.0.1",
    "firebase": "^12.8.0",
    "lucide-react": "^0.562.0",
    "next": "16.1.4",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.squidgame.launcher",
    "productName": "Squid Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/gc_character.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "installerIcon": "public/gc_character.png",
      "uninstallerIcon": "public/gc_character.png",
      "installerSidebar": "build/installerSidebar.png",
      "installerHeader": "build/installerHeader.png",
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}